<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArduLED_Mobile.ConnectPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="DimGray">
            <Entry x:Name="IpEntry"
                   Placeholder="Enter IP"
                       TextColor="White"
                       PlaceholderColor="LightGray"
                       Margin="10"
                       FontSize="Medium"/>
                <Entry x:Name="PortEntry"
                   Placeholder="Enter Port" 
                   Keyboard="Numeric"
                   Completed="ConnectButtonClicked"
                       TextColor="White"
                       PlaceholderColor="LightGray"
                       Margin="10"
                       FontSize="Medium"/>
                <Button Text="Connect" 
                    Clicked="ConnectButtonClicked"
                        FontSize="Large"
                        BackgroundColor="DodgerBlue"
                    TextColor="White"
                    Margin="10"/>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>