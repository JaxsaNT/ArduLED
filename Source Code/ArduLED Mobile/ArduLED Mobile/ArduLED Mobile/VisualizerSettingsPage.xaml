<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArduLED_Mobile.VisualizerSettingsPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="DimGray">
            <Label Text="Select Config file to use"
                        VerticalOptions="Start" 
                        HorizontalOptions="Start"
                           FontSize="30"
                           TextColor="White"
                   Margin="10"/>
            <Picker x:Name="VisualizerConfigNamePicker"
                            SelectedIndex="0"
                            HorizontalOptions="FillAndExpand"
                           VerticalOptions="Start"
                            WidthRequest="100"
                            FontSize="30"
                            TextColor="White"
                    Margin="10"/>
            <Button Text="Start Visualizer" 
                Clicked="StartVisualizerButton_Clicked"
                    FontSize="20"
                    BackgroundColor="DodgerBlue"
                TextColor="White"
                Margin="10"/>
            <Button Text="Stop Visualizer" 
                Clicked="StopVisualizerButton_Clicked"
                    FontSize="20"
                    BackgroundColor="DodgerBlue"
                TextColor="White"
                Margin="10"/>
            <Button Text="Send just config" 
                Clicked="SendConfigButton_Clicked"
                    FontSize="20"
                    BackgroundColor="DodgerBlue"
                TextColor="White"
                Margin="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>